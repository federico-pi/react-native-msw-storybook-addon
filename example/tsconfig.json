{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "react-native",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "useUnknownInCatchVariables": false,
    "strict": true,
    "lib": [
      "es7",
      "dom"
    ],
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./build"
  },
  "include": [
    "./src",
    "./storybook"
  ],
  "exclude:": [
    "./build"
  ]
}
